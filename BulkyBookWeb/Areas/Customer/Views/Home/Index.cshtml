@model IEnumerable<BulkyBook.Models.Product>

<div class="row" pb-3>
	@foreach(var pro in Model){
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba;border-radius:5px;">
					<div class="card">
						<img src="@pro.ImageUrl" class="card-img-top rounded"/>
						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary">@pro.Name</p>
							<p class="card-title text-info">by <b>@pro.Author</b></p>
						</div>
						<div class="pl-1">
							<p>List Price:</p><strike><b>@pro.ListPrice.ToString("0.00")</b></strike>
						</div>
						<div class="pl-1">
							<p>As low as :<b>@pro.Price100.ToString("0.00")</b></p>
						</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@pro.Id">
							Details
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>